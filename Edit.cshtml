@model CarCollection.Web.Models.Car
@{
    ViewData["Title"] = "Edit Car";
}
<h2>Edit Car</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
  <input type="hidden" asp-for="Id" />
  <!-- reuse the same structure as Create -->
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label asp-for="Make" class="form-label"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
      </div>
      <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
      </div>
      <div class="mb-3">
        <label asp-for="VIN" class="form-label"></label>
        <input asp-for="VIN" class="form-control" />
      </div>
      <div class="mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" class="form-control" />
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <label asp-for="Color" class="form-label"></label>
        <input asp-for="Color" class="form-control" />
      </div>
      <div class="mb-3">
        <label asp-for="PurchaseDate" class="form-label"></label>
        <input asp-for="PurchaseDate" class="form-control" type="date" />
      </div>
      <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Add Photo</label>
        <input type="file" name="photo" class="form-control" />
      </div>
    </div>
  </div>

  <button class="btn btn-primary">Update</button>
  <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
