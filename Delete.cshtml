@model CarCollection.Web.Models.Car
@{
    ViewData["Title"] = "Delete Car";
}
<h2>Delete</h2>

<div>
    <h4>Are you sure you want to delete this car?</h4>
    <dl class="row">
        <dt class="col-sm-2">Make</dt><dd class="col-sm-10">@Model.Make</dd>
        <dt class="col-sm-2">Model</dt><dd class="col-sm-10">@Model.Model</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>
